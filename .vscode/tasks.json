{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/canny.cpp",
                "-o",
                "${workspaceFolder}/canny",
                "`pkg-config",
                "--cflags",
                "--libs",
                "opencv`"
            ],
            "group": "build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/canny",
            "group": "test",
            "dependsOn": [
                "build"
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ compila il file attivo",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Attivit√† generata dal debugger."
        }
    ]
}